<Page x:Class="FinalTest.number"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalTest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="number">

    <Grid>
        
        <Button Content="Сохранить" FontSize="18" FontWeight="Bold" Background="#FF48BFEC" HorizontalAlignment="Left" Margin="355,325,0,0" VerticalAlignment="Top" Width="125" Click="Button_Click" Height="60"/>
        <TextBox x:Name="vvod"  HorizontalAlignment="Left" FontSize="18" Height="38" Margin="333,266,0,0" TextWrapping="Wrap" Text="{Binding number_of_goods}" VerticalAlignment="Top" Width="147"/>
        <TextBlock HorizontalAlignment="Left" FontSize="18" Margin="310,236,0,0" TextWrapping="Wrap" Text="Введите количество:" VerticalAlignment="Top" Height="30" Width="180"/>
        <TextBlock HorizontalAlignment="Left" Margin="549,266,0,0" TextWrapping="Wrap" Text="Всего:" VerticalAlignment="Top" Height="27" Width="55"/>
        <TextBlock x:Name="NumberTXT" HorizontalAlignment="Left" Margin="549,298,0,0" TextWrapping="Wrap" Text="{Binding number_of_goods}" VerticalAlignment="Top" Height="31" Width="68"/>
    </Grid>
</Page>
